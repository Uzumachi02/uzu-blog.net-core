@model PostsCategoriesViewModel
<partial name="_BreadcrumbPartial" model="Model.Breadcrumb" />
@if( Model.Categories != null && Model.Categories.Any() ) {
    <div class="category">
        @foreach( var item in Model.Categories ) {
            <h2>
                <a href="@LinkBuilder.Post.CategoryList(item.Alias)">@item.Title</a>
            </h2>
            @if( item.Posts != null && item.Posts.Any() ) {
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    @foreach( var post in item.Posts ) {
                        <div class="col">
                            <partial name="_PostCardPartial" model="post" />
                        </div>
                    }
                </div>
            }
        }
    </div>

    <partial name="_PaginationPartial" model="Model.Pagination" />
} else {
    <p>Not items</p>
}